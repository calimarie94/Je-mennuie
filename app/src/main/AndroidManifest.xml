<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.imac.je_m_ennuie" >
    <uses-permission android:name="android.permission.INTERNET" />

    <!--<application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <!-- Activité principale -->
        <activity
            android:name=".JemennuieActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Affichage du jeu -->
        <activity
            android:name=".GameDisplayActivity"
            android:label="@string/title_game_display" />
        <!-- Liste des activités -->
        <activity
            android:name=".ListActivitiesActivity"
            android:label="@string/title_activity_list" />
        <!-- Détail d'une activité de la liste -->
        <activity
            android:name=".DetailedActivityActivity"
            android:label="@string/title_activity_detailed" />
        <!-- Affichage des résultats -->
        <activity
            android:name=".ResultDisplayActivity"
            android:label="@string/title_result" />
        <!-- Affichage quand plus de résultats -->
        <activity
            android:name=".NoMoreResultActivity"
            android:label="@string/title_nomoreresult" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

    </application>

</manifest>
